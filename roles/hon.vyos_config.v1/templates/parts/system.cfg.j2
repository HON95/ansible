{# Required #}
set system domain-name '{{ vyos_config_sys_domain_name }}'
set system host-name '{{ vyos_config_sys_host_name }}'
set system time-zone '{{ vyos_config_sys_time_zone }}'

{% for dns in vyos_config_sys_name_servers %}
set system name-server '{{ dns }}'
{% endfor %}
{% if vyos_config_sys_options_defaults %}
set system option ctrl-alt-delete 'reboot'
set system option reboot-on-panic
set system option startup-beep
set system option time-format '24-hour'
{% endif %}
{% if vyos_config_sys_keyboard_layout %}
set system option keyboard-layout '{{ vyos_config_sys_keyboard_layout }}'
{% endif %}
{% if vyos_config_sys_post_login_banner %}
set system login banner post-login '{{ vyos_config_sys_post_login_banner | regex_replace("\"", "\\\"") | regex_replace("[\\r\\n]", "\\\\n") }}'
{% endif %}
{% if vyos_config_sys_login_timeout_s %}
set system login timeout '{{ vyos_config_sys_login_timeout_s }}'
{% endif %}
{% if vyos_config_sys_syslog_defaults %}
set system syslog console facility all level 'err'
{% endif %}
{% if vyos_config_sys_conntrack_defaults %}
set system conntrack modules ftp
set system conntrack modules h323
set system conntrack modules nfs
set system conntrack modules pptp
set system conntrack modules rtsp
set system conntrack modules sip
set system conntrack modules sqlnet
set system conntrack modules tftp
{% endif %}

{% for user in vyos_config_sys_login_users %}
{% set user_path = "system login user " + user.name %}
{% if user.password_hash is defined %}
set {{ user_path }} authentication {{ fq }}encrypted-password{{ fq }} '{{ user.password_hash }}'
{% endif %}
{% for sshkey_name, sshkey_value in user.ssh_keys | default({}) | dictsort %}
{% if sshkey_value.options is defined %}
set {{ user_path }} authentication public-keys {{ sshkey_name }} options '{{ sshkey_value.options | regex_replace("\"", "&quot;") }}'
{% endif %}
set {{ user_path }} authentication public-keys {{ sshkey_name }} type '{{ sshkey_value.type }}'
set {{ user_path }} authentication public-keys {{ sshkey_name }} key '{{ sshkey_value.key }}'
{% endfor %}
{% endfor %}{# vyos_config_sys_login_users #}
