#jinja2: trim_blocks:False
# {{ ansible_managed }}

log:
  filePath: '{{ traefik_log_dir }}/error.log'
  format: '{{ traefik_log_format }}'
  level: '{{ traefik_log_level }}'

accessLog:
  filePath: '{{ traefik_log_dir }}/access.log'
  format: '{{ traefik_accesslog_format }}'
  bufferingSize: '{{ traefik_accesslog_buffering_size }}'
  addInternals: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: '{{ traefik_acme_webmaster | default("") }}'
      storage: '{{ traefik_acme_path }}'
      keyType: RSA4096
{% if traefik_staging_server_enable %}
      # Staging server
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
{% endif %}
      httpChallenge:
        entryPoint: http

entryPoints:
  http:
    address: ':80'
    http3: {}
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
          permanent: true
  https:
    address: ':443'
    http3: {}
  api:
    address: ':8081'
    http3: {}
  metrics:
    address: ':8082'
    http3: {}
  ping:
    address: ':8083'
    http3: {}
{% for ep in traefik_extra_tcpudp_entrypoints | dict2items %}
  {{ ep.key }}:
    address: '{{ ep.value }}'
{% endfor %}

api:
  dashboard: true
  debug: false

metrics:
  prometheus:
    manualRouting: true

ping:
  manualRouting: true

providers:
  file:
    directory: '{{ traefik_provider_config_dir }}'
    watch: true
{% if traefik_provider_docker_enable %}
  docker:
    exposedbydefault: false
{% endif %}
