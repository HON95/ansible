# Generated

[Match]
Name={{ linux_server_networking_interface }}

[Link]
MTUBytes={{ linux_server_networking_mtu }}

[Network]
{# IPv4 #}
{% if linux_server_networking_ipv4_addressing == 'static' %}
Address={{ linux_server_networking_static_ipv4_address | ansible.netcommon.ipaddr("address/prefix") }}
Gateway={{ linux_server_networking_static_ipv4_gateway | ansible.netcommon.ipaddr("address") }}
{% elif linux_server_networking_ipv4_addressing == 'dhcp' %}
DHCP=ipv4
{% endif %}
{# IPv6 #}
{% if linux_server_networking_ipv6_addressing == 'static' %}
IPv6AcceptRA=no
Address={{ linux_server_networking_static_ipv6_address | ansible.netcommon.ipaddr("address/prefix") }}
Gateway={{ linux_server_networking_static_ipv6_gateway | ansible.netcommon.ipaddr("address") }}
{% elif linux_server_networking_ipv6_addressing == 'slaac' %}
{# Will SLAAC or DHCPv6 #}
IPv6AcceptRA=yes
{% else %}
IPv6AcceptRA=no
{% endif %}
