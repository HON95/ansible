# Generated

keyfile /etc/chrony/chrony.keys
driftfile /var/lib/chrony/chrony.drift
logdir /var/log/chrony

maxupdateskew 100.0
rtcsync
makestep 1 3

{% for server in linux_server_ntp_servers %}
pool {{ server }} iburst
{% endfor %}

{% if linux_server_ntp_chrony_server_mode %}
# Allow external clients to query it
allow all
{% endif %}
